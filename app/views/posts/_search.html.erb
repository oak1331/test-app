<section class="index-top">
  <div class="container bg-dark">
    <div class="row justify-content-center">
      <div class="col-lg-7 col-xl-6 text-center">
        <h1 class="mb-5 text-light">検索フォーム</h1>
        <%= form_with url: search_posts_path, local: true, method: :get, class: "d-flex flex-row mb-2 p-1 bg-white shadow-lg input-group rounded-3" do |form| %>
          <%= form.text_field :keyword, placeholder: "検索", class: "form-control form-control-lg rounded-0 border-0 shadow-none" %>
          <%= button_tag type: 'submit', class: "btn btn-secondary rounded-3 flex-shrink-0 shadow-none border-0" do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>