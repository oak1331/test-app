<!DOCTYPE html>
<html>
  <head>
    <title>TestApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
      <div class="container">
        <%= link_to "test-app", root_path, class: "col-3 col-lg-2 text-decoration-none" %>
        <div class="dropdown  dropstart">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-user text-white"></i>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <% if user_signed_in? %>
              <%= link_to "マイページ", user_path(current_user.id), class: "dropdown-item text-decoration-none" %>
              <li><hr class="dropdown-divider"></li>
              <%= link_to "新規投稿", new_post_path, class: "dropdown-item text-decoration-none" %>
              <li><hr class="dropdown-divider"></li>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "dropdown-item text-decoration-none" %>
            <% else %>
              <%= link_to "新規登録", new_user_registration_path, class: "dropdown-item text-decoration-none" %>
              <li><hr class="dropdown-divider"></li>
              <%= link_to "ログイン", new_user_session_path, class: "dropdown-item text-decoration-none" %>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
    <div class="bg-dark">
      <div class="footer-top py-6">
        <div class="container">
          <div class="row">
            <div class="col-md-12 col-lg-4 my-3">
              <h1 class="pb-3 mb-3 text-white">test-app</h1>
              <div class="nav fs-5">
                <div class="me-3 text-light">
                  <i class="fab fa-facebook-square"></i>
                </div>
                <div class="me-3 text-light">
                  <i class="fab fa-twitter"></i>
                </div>
                <div class="me-3 text-light">
                  <i class="fab fa-instagram"></i>
                </div>
                <div class="me-3 text-light">
                  <i class="fab fa-linkedin"></i>
                </div>
              </div>
            </div>
            <div class="col-sm-4 col-lg-2 my-3">
              <ul class="list-unstyled m-0 pt-3">
                <li class="pb-2">
                  <div class="text-light">お問い合わせ</div>
                </li>
                <li class="pb-2">
                  <div class="text-light">よくある質問</div>
                </li>
              </ul>
            </div>
            <div class="col-sm-4 col-lg-2 my-3">
              <ul class="list-unstyled m-0 pt-3">
                <li class="pb-2">
                  <div class="text-light">利用規約</div>
                </li>
                <li class="pb-2">
                  <div class="text-light">会員規約</div>
                </li>
              </ul>
            </div>
            <div class="col-sm-4 col-lg-2 my-3">
              <ul class="list-unstyled m-0 pt-3">
                <li class="pb-2">
                  <div class="text-light">プライバシーポリシー</div>
                </li>
                <li class="pb-2">
                  <%= link_to "TOPに戻る", root_path, class:"text-light text-decoration-none" %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="footer-bottom py-2 border-style light top small">
        <div class="container">
          <div class="row">
            <div class="col-md-6 text-center text-md-start py-1">
              <p class="m-0 text-light">Copyright © 2021 Y.O All Rights Reserved.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
