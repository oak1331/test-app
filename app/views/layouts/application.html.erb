<!DOCTYPE html>
<html>
  <head>
    <title>TestApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
      <div class="container">
        <%= link_to "test-app", root_path, class: "col-3 col-lg-2 text-decoration-none" %>
        <div class="dropdown  dropstart">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-user text-white"></i>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <% if user_signed_in? %>
              <%= link_to "マイページ", user_path(current_user.id), class: "dropdown-item text-decoration-none" %>
              <li><hr class="dropdown-divider"></li>
              <%= link_to "新規投稿", new_post_path, class: "dropdown-item text-decoration-none" %>
              <li><hr class="dropdown-divider"></li>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "dropdown-item text-decoration-none" %>
            <% else %>
              <%= link_to "新規登録", new_user_registration_path, class: "dropdown-item text-decoration-none" %>
              <li><hr class="dropdown-divider"></li>
              <%= link_to "ログイン", new_user_session_path, class: "dropdown-item text-decoration-none" %>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
